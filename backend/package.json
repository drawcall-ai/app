{
  "type": "module",
  "files": [
    "dist",
    ".env.production"
  ],
  "scripts": {
    "db:push": "dotenvx run -f .env -- prisma db push --schema ./src/db/schema.prisma",
    "dev": "dotenvx run -f .env -- node --watch --loader ts-node/esm ./src/index.ts",
    "build": "tsc",
    "start": "dotenvx run -f .env -- node dist/index.js",
    "generate": "prisma generate --schema ./src/db/schema.prisma"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.39.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/websocket": "^11.0.2",
    "@trpc/server": "^10.45.0",
    "fastify": "^5.2.1",
    "redis": "^4.7.0",
    "ws": "^8.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "concurrently": "^9.1.2"
  }
}
