{
  "name": "backend",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "db:push": "dotenvx run -f .env -- prisma db push --schema ./src/db/schema.prisma",
    "dev": "dotenvx run -f .env -- node --watch --loader ts-node/esm ./src/index.ts",
    "dev:start": "dotenvx run -f .env -- node ./dist/index.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "generate": "prisma generate --schema ./src/db/schema.prisma"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@polar-sh/better-auth": "1.0.4",
    "@polar-sh/sdk": "^0.34.3",
    "@prisma/client": "6.11.0",
    "@trpc/server": "^11.4.3",
    "fastify": "^5.2.1",
    "prisma": "^6.11.0",
    "prisma-client": "^0.0.0",
    "zod": "^3.22.4",
    "better-auth": "^1.2.12"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.39.0",
    "ts-node": "^10.9.2"
  }
}
